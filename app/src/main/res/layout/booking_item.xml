<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/white_background_2"
    android:elevation="3dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hotelNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/roomNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bookingDatesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Dates"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/statusButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Change Status"
            android:textColor="@android:color/white"
            android:backgroundTint="#09104C"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/cancelBookingButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cancel Booking"
            android:textColor="@android:color/white"
            android:backgroundTint="#ff0000"
            android:layout_marginTop="5dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/rateAndCommentButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Rate and Comment"
            android:textColor="@android:color/white"
            android:backgroundTint="#09104C"
            android:layout_marginTop="5dp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>

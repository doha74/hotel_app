<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".AddHotelActivity">

        <Button
            android:id="@+id/backToAdminPageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Admin Page"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#09104C"/>

        <EditText
            android:id="@+id/hotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hotel Name"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/hotelLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hotel Location"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/hotelDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hotel Description"
            android:minHeight="64dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:backgroundTint="#09104C"
            app:cornerRadius="20dp"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/selectedImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:visibility="gone"/>

        <Button
            android:id="@+id/addButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Hotel"
            android:backgroundTint="#09104C"
            android:layout_marginBottom="16dp"
            app:cornerRadius="20dp"/>

    </LinearLayout>
</ScrollView>
